@using SeIsland.WebUI.Dtos.MealDtos
@model UpdateMealDto
@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün Güncelleme Formu</h4>
		<div class="row">
			<div class="col-md-6">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Güncelle</div>
						</div>
						<input type="hidden" asp-for="MealID" />
						<div class="card-body">
							<div class="form-group">
								<label for="MealName">Ürün adı</label>
								<input type="text" class="form-control" asp-for="MealName" id="MealName">
							</div>
							<div class="form-group">
								<label for="MealDescription">Ürün Açıklaması</label>
								<input type="text" class="form-control" asp-for="MealDescription" id="MealDescription">
							</div>
							<div class="form-group">
								<label for="Price">Ürün Fiyatını Giriniz</label>
								<input type="number" class="form-control" asp-for="Price" id="Price">
							</div>
							<div class="form-group">
								<label for="ImageUrl">Ürün Görselini Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
							<div class="form-group">
								<label for="CategoryId">Ürün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control" })
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
