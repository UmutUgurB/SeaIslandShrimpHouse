@using SeIsland.WebUI.Dtos.CategoryDtos
@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Forms</h4>
		<div class="row">
			<div class="col-md-6">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="CategoryId" />
							<div class="form-group">
								<label for="CategoryName">Kategori Adı</label>
								<input type="text" class="form-control" asp-for="CategoryName" id="CategoryName">

							</div>
							<div class="form-group">
								<label for="CategoryName">Kategori Açıklaması</label>
								<input type="text" class="form-control" asp-for="CategoryDescription" id="CategoryDescription">

							</div>


						</div>
						<div class="card-action">
							<button asp-action="UpdateCategory" asp-controller="Category" class="btn btn-success">Kategoriyi Güncelle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

