@using SeIsland.WebUI.Dtos.CategoryDtos
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz : 
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Kategori Açıklaması</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Yeni Kategori Ekle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
									{
								<tr>
									
										<td>@item.CategoryId</td>
										<td>@item.CategoryName</td>
										<td>@item.CategoryDescription</td>
										<td>@item.IsCategoryActive</td>
										<td><a class="btn btn-danger" asp-route-id="@item.CategoryId" asp-action="DeleteCategory" asp-controller="Category">Sil</a></td>
										<td>
											<a class="btn btn-warning" asp-route-id="@item.CategoryId" asp-action="UpdateCategory" asp-controller="Category">Düzenle</a>
										</td>
										<td>
											<a class="btn btn-secondary" asp-action="CreateCategory" asp-controller="Category">Kategori Ekle</a>
										</td>
								</tr>
								}
							</tbody>
						</table>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>
